<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/program_commnet_avatar_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/item_comment_avatar"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/comment_content_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/program_commnet_avatar_img"
        android:layout_marginLeft="2dp">

        <ImageView
            android:id="@+id/program_comment_bubble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/item_comment_bubble"
            android:scaleType="fitXY"
            android:layout_alignBottom="@+id/program_comment_content_text"
            android:layout_marginBottom="-9dp"/>
        
        <TextView
            android:id="@+id/program_comment_user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大尾巴鱼:"
            android:textColor="#FF000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"/>
        
         <TextView
            android:id="@+id/program_comment_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013-09-21"
            android:textColor="#FF000000"
            android:layout_toRightOf="@+id/program_comment_user_name_text"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:layout_alignBaseline="@+id/program_comment_user_name_text"
            android:textSize="10sp"/>
        
        <TextView
            android:id="@+id/program_comment_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电视沙发由上海智多屏软件科技有限公司荣誉出品"
            android:textColor="#FF000000"
            android:layout_below="@+id/program_comment_user_name_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/program_comment_love_img"/>

        <ImageView
            android:id="@+id/program_comment_love_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_comment_love" 
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:clickable="true"/>

        <RelativeLayout
            android:id="@+id/program_comment_love_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/program_comment_expand_left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_comment_expand_bg" 
                android:clickable="true"/>

            <ImageView
                android:id="@+id/program_comment_expand_love_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_comment_expand_love" 
                android:layout_toRightOf="@+id/program_comment_expand_left_img"/>

            <ImageView
                android:id="@+id/program_comment_good_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_comment_good" />

            <ImageView
                android:id="@+id/program_comment_bad_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_comment_bad"
                android:layout_toRightOf="@+id/program_comment_good_img"/>

        </RelativeLayout>
        
    </RelativeLayout>
    
</RelativeLayout>